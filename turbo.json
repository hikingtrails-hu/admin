{
    "$schema": "https://turbo.build/schema.json",
    "globalDependencies": ["**/.env.*local"],
    "remoteCache": {
        "signature": true
    },
    "pipeline": {
        "build": {
            "outputs": ["dist/**", ".cache/**", "public/dist/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "typecheck": {}
    }
}
